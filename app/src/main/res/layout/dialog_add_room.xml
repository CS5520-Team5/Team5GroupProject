<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


<EditText
    android:id="@+id/add_room_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Room Name"
    android:background="@color/lightgrey"
    android:layout_marginVertical="8dp"
    android:padding="8dp"/>

<ImageView
    android:id="@+id/add_room_image"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@color/lightgrey"
    android:src="@drawable/image"
    android:layout_marginVertical="8dp"
    android:padding="8dp"/>

<Button
    android:id="@+id/btn_add_room_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select Picture"
    android:layout_marginVertical="8dp"
    android:padding="8dp"/>

<EditText
    android:id="@+id/add_room_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Room Description"
    android:inputType="textMultiLine"
    android:maxLines="2"
    android:minLines="2"
    android:scrollHorizontally="false"
    android:gravity="top|start"
    android:background="@color/lightgrey"
    android:layout_marginVertical="16dp"
    android:padding="8dp"/>

<Button
    android:id="@+id/btn_add_save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Save" />

<Button
    android:id="@+id/btn_add_cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cancel" />

</LinearLayout>
