<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".WebServiceActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSekiro"
        android:layout_width="384dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="#CC0000"
        app:cardCornerRadius="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/testText">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sekiroâ„¢: Shadows Die Twice News"
            android:layout_centerInParent="true"
            android:textSize="21dp"
            android:textColor="@color/white" />

    </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/testText"
        android:layout_width="384dp"
        android:layout_height="440dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardSekiro"
        app:layout_constraintBottom_toTopOf="@id/responseTimeText" />

    <TextView
        android:id="@+id/responseTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting time: -"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testText"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>