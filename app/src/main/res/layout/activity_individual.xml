<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@id/image_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_setup"
        app:layout_constraintHorizontal_bias="0"
        app:srcCompat="@drawable/misc" />

    <TextView
        android:id="@id/text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_setup"
        app:layout_constraintHorizontal_bias="0.1"
        tools:text="@string/categoryString"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textColor="@color/darkGrey" />

    <TextView
        android:id="@id/text_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_category"
        app:layout_constraintBottom_toTopOf="@id/text_delivery"
        app:layout_constraintHorizontal_bias="0"
        tools:text="@string/setupString"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textColor="@color/grey" />

    <TextView
        android:id="@id/text_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_setup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginBottom="12dp"
        tools:text="@string/deliveryString"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textColor="@color/grey" />

</androidx.constraintlayout.widget.ConstraintLayout>