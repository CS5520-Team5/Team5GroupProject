<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@id/introText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/introTextString"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnWebService"/>

    <Button
        android:id="@+id/btnWebService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnWebServiceString"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnAboutUs"
        app:layout_constraintTop_toBottomOf="@id/introText" />

    <Button
        android:id="@id/btnAboutUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnAboutUsString"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnWebService"
        app:layout_constraintBottom_toTopOf="@id/btnPlaceholder2"/>

    <Button
        android:id="@id/btnPlaceholder2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnPlaceholder2String"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAboutUs"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>